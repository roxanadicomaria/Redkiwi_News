<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Redkiwi_News::news" title="News" sortOrder="30">
                        <resource id="Redkiwi_News::edit_item" title="Edit Item" sortOrder="10" />
                        <resource id="Redkiwi_News::save_item" title="Save Item" sortOrder="20" />
                        <resource id="Redkiwi_News::delete_item" title="Delete Item" sortOrder="30" />
                        <resource id="Redkiwi_News::edit_category" title="Edit Category" sortOrder="40" />
                        <resource id="Redkiwi_News::save_category" title="Save Category" sortOrder="50" />
                        <resource id="Redkiwi_News::delete_category" title="Delete Category" sortOrder="60" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Redkiwi_News::system_config" title="Redkiwi News" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
